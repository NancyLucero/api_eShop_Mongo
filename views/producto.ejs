    <div class="container-fluid d-flex justify-content-center contenedorPrincipal">
      <div class="container w-75 contenedorSecundario paginaProducto">
        <div class="d-flex contenedorInfoProductos">
          <h3 class="tituloOculto"><%= product.nombre %></h3>
          <img src="/img/Lamparas/Productos/<%=product.imagen%>" alt="<%= product.nombre %>">
          <div class="infoProductos">
            <h3><%= product.nombre %></h3>
            <p>$ <%= product.precioLista %> <span class="descuento">$<%= product.precio %></span></p>
            <div class="d-flex flex-wrap boxBtn">
              <form method="post" action="editarCantidad" id="editarCantidad">
                <input type="hidden" name="id" value="<%= product.idproduct %>">
                <input type="submit" value="-" class="btnProductos" name="decrementar">
                <input type="text" class="cantidad " size=2 name="cantidad"
                    value="<%= product.cantidad %>" readonly>
                <input type="submit" value="+" class="btnProductos" name="incrementar">
            </form>
              <form action="/productos/agregar" method="post">
                <input type="hidden" name="idProducto" value="<%= product.id %>">
                <input type="hidden" name="nombre" value="<%= product.nombre %>">
                <input type="hidden" name="precio" value="<%= product.precio %>">
                <input type="hidden" name="imagen" value="<%= product.imagen %>">
                <input type="hidden" name="cantidad" value="1">

                <!-- carrito -->
                <form action="/productos/agregar" method="post">
                  <input type="hidden" name="idProducto" value="<%= product.id %>">
                  <input type="hidden" name="nombre" value="<%= product.nombre %>">
                  <input type="hidden" name="precio" value="<%= product.precio %>">
                  <input type="hidden" name="imagen" value="<%= product.imagen %>">
                  <input type="hidden" name="cantidad" value="1">
                  <input class="btnCarrito" type="submit" value="Agregar al carrito">                        
                </form>                        
              </form>
            </div>
            <div class="accordion accordion-flush" id="accordionFlushExample">
              <div class="accordion-item">
                <h2 class="accordion-header">
                  <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne"
                    aria-expanded="true" aria-controls="collapseOne">
                    descripción
                  </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                  <div class="accordion-body">
                    <p><%= product.descripcion %></p>
                  </div>
                </div>
              </div>
              <div class="accordion-item">
                <h2 class="accordion-header">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    información detallada
                  </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                  <div class="accordion-body">
                    <h4>Categoria</h4>
                    <p><%= product.categoria %></p>
                    <h4>Dimensiones</h4>
                    <p><%= product.medida %></p>
                    <h4>Fuente de luz</h4>
                    <p><%= product.fuenteLuz %></p>
                    <h4>Voltaje</h4>
                    <p><%= product.voltaje %></p>
                  </div>
                </div>
              </div>
              <div class="accordion-item">
                <h2 class="accordion-header">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                    pruebas y certificaciones
                  </button>
                </h2>
                <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                  <div class="accordion-body">
                    <p>Certificaciones
                      CE, CB, IP44, Clase III, UKCA, UL
                      
                      Fabricante
                      Producido en China por Nine United China Ltd.</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="galeriaProductos">
          <!-- mostrar solo 5 productos de c/diseñador -->
