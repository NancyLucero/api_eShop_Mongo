<div class="boxLamps">
  <!--<img src="/img/Lamparas/lampara.jpg" alt="" />-->
  <img src="/img/Lamparas/<%=product.imagen%>" alt="" />
  <p class="medidas"><%=product.medida%></p>
  <div class="contenedorTextos">
    <p class="marca"><%=product.nombre%></p>
    <p class="precio">$<%=product.precioLista%></p>
    <p class="precioAntes"><%=product.precio%></p>
    <p class="creador"><%=product.autor%></p>
    <p class="descripcion"><%=product.descripcion%></p>
  </div>
  <form action="/productos/agregar" method="post">
    <input type="hidden" name="idProducto" value="<%= product.id %>">
    <input type="hidden" name="nombre" value="<%= product.nombre %>">
    <input type="hidden" name="precio" value="<%= product.precio %>">
    <input type="hidden" name="imagen" value="<%= product.imagen %>">
    <input type="hidden" name="cantidad" value="1">
    <input class="btnCarrito" type="submit" value="Comprar">                        
  </form>
</div>
